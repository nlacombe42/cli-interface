<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%m%n</pattern>
		</encoder>
	</appender>

	<logger name="net.nlacombe.jcli">
		<level value="debug" />
	</logger>

	<root>
		<level value="info" />
		<appender-ref ref="consoleLog" />
	</root>
</configuration>
